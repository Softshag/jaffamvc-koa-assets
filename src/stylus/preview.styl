
.assets-preview
  width: 100%
  height 100%
  overflow-y auto
  .preview
    width 100%
    text-align center
    img, video, audio
      max-width 100%
      max-height 250px

  .info
    table-layout: fixed;
    width 100%
    td:first-child
      font-weight bold
      vertical-align baseline
    td:last-child
      word-wrap break-word
